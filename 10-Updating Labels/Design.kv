#:kivy 2.0.0
<MyLayout>
    BoxLayout:
        orientation:"vertical"
        size: root.width, root.height
        Label: 
            id: name_label
            text: "What's your name ?"
            font_size: 32
        TextInput:
            id: name_input
            multiline: False
            size_hint: (1,0.25)
        GridLayout:
            cols: 2
            Button:
                on_press: root.press()
                text: "Submit"
                font_size: 32
                size_hint: (1,0.25)
            Button:
                on_press: root.press()
                text: "Clear"
                font_size: 32
                size_hint: (1,0.25)